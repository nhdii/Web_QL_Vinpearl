@model QL_Vinpearl.Models.CTHD

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
	<h3>Bạn có chắc chắn muốn xoá CTHD này không?</h3>
	<p>Mã hoá đơn: @Html.DisplayFor(model => model.maHD)</p>
	<p>Mã vé: @Html.DisplayFor(model => model.maVe)</p>
	<p>Số lượng: @Html.DisplayFor(model => model.soLuong)</p>
	<p>Giá tiền: @Html.DisplayFor(model => model.giaTien)</p>
	@using (Html.BeginForm("Delete", "CTHDs", FormMethod.Post))
	{
		@Html.AntiForgeryToken()
		@Html.Hidden("maHD", Model.maHD) 
		@Html.Hidden("maVe", Model.maVe)
		<div class="m-auto">
			<input class="btn btn-primary btn-lg" type="submit" value="Xoá" />
			@Html.ActionLink("Quay Về", "Index", null, new { @class = "btn btn-primary btn-lg" })
		</div>
	}
</div>