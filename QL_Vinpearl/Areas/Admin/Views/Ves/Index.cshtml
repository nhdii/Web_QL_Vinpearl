@model IEnumerable<QL_Vinpearl.Models.VE>

@{
	ViewBag.Title = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
	string loaiVe = "";
}

<main>
	<div class="container-fluid px-4">
		<div class="my-3">
			@Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
		</div>
		<div class="card mb-4">
			<div class="card-header">
				<i class="fas fa-table me-1"></i>
				Bảng vé
			</div>
			<div class="card-body">
				<table id="datatablesSimple">
					<thead>
						<tr>
							<th>Mã Vé</th>
							<th>Tên Dịch Vụ</th>
							<th>Loại Vé</th>
							<th>Giá Tiền</th>
							<th>Chức Năng</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@Html.DisplayFor(modelItem => item.maVe)</td>
								<td>@Html.DisplayFor(modelItem => item.DICHVU.tenDV)</td>
								<td>
									@{
										if (item.loaiVe == true)
										{
											loaiVe = "Người Lớn";
										}
										else
										{
											loaiVe = "Trẻ em";
										}
									}
									@loaiVe
								</td>
								<td>@Html.DisplayFor(modelItem => item.giaTien)</td>
								<td>
									<div class="d-flex justify-content-center">
										<a href="@Url.Action("Edit", new { id = item.maVe })"><i class="fa-solid fa-lg fa-pen-to-square"></i></a>
										<div class="ms-2"></div>
										<a href="@Url.Action("Delete", new { id = item.maVe })"><i class="fa-regular fa-lg fa-trash-can"></i></a>
									</div>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</main>


