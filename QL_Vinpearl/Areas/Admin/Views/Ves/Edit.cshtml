@model QL_Vinpearl.Models.VE

@{
	ViewBag.Title = "Edit";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm("Edit", "Ves", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	@Html.AntiForgeryToken()
	<section class="vh-100 gradient-custom">
		<div class="container py-5 h-100">
			<div class="row justify-content-center align-items-center h-100">
				<div class="col-12 col-lg-9 col-xl-7">
					<div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
						<div class="card-body p-4 p-md-5">
							<h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Sửa thông tin vé</h3>
							@Html.ValidationSummary(true, "", new { @class = "text-danger" })
							@Html.HiddenFor(model => model.maVe)
							<div class="row">
								<div class="col-md-6 mb-4">
									<div class="form-outline">
										@Html.DropDownList("maDV", null, htmlAttributes: new { @class = "form-control form-control-lg" })
										@Html.ValidationMessageFor(model => model.maDV, "", new { @class = "text-danger" })
										<label class="form-label fw-bold">Chọn Dịch Vụ</label>
									</div>
								</div>
								<div class="col-md-6 mb-4">
									<div class="form-outline datepicker w-100 ">
										<div class="form-check form-check-inline">
											@Html.RadioButtonFor(model => model.loaiVe, "True", new { @class = "form-check-input", @checked = "checked" })
											<label class="form-check-label">Người Lớn</label>
										</div>
										<div class="form-check form-check-inline">
											@Html.RadioButtonFor(model => model.loaiVe, "False", new { @class = "form-check-input" })
											<label class="form-check-label">Trẻ Em</label>
										</div>
										<br />
										<label class="form-label fw-bold mt-4">Loại Vé</label>
									</div>
								</div>
							</div>

							<div class="row">
								<div class="col-md-6 mb-4">
									<div class="form-outline">
										@Html.EditorFor(model => model.giaTien, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
										@Html.ValidationMessageFor(model => model.giaTien, "", new { @class = "text-danger" })
										<label class="form-label fw-bold">Giá Tiền</label>
									</div>
								</div>
							</div>

							<div style="width: 100%; display: flex">
								<div class="m-auto">
									<input class="btn btn-primary btn-lg" type="submit" value="Sửa" />
									@Html.ActionLink("Quay Về", "Index", null, new { @class = "btn btn-primary btn-lg" })
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
}