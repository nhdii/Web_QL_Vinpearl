@model QL_Vinpearl.Models.LOAIDV

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
	<h3>Bạn có chắc chắn muốn xoá loại dịch vụ này không?</h3>
	<p>Mã loại dịch vụ: @Html.DisplayFor(model => model.maLoaiDV)</p>
	<p>Tên loại dịch vụ: @Html.DisplayFor(model => model.tenLoai)</p>
	@using (Html.BeginForm("Delete", "LoaiDichVus", FormMethod.Post))
	{
		@Html.AntiForgeryToken()
		<div class="m-auto">
			<input class="btn btn-primary btn-lg" type="submit" value="Xoá" />
			@Html.ActionLink("Quay Về", "Index", null, new { @class = "btn btn-primary btn-lg" })
		</div>
	}
</div>