@model QL_Vinpearl.Models.LOAIDV

@{
	ViewBag.Title = "Edit";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm("Edit", "LoaiDichVus", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	@Html.AntiForgeryToken()
	<section class="vh-100 gradient-custom">
		<div class="container py-5 h-100">
			<div class="row justify-content-center align-items-center h-100">
				<div class="col-12 col-lg-9 col-xl-7">
					<div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
						<div class="card-body p-4 p-md-5">
							<h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Sửa thông tin loại dịch vụ</h3>
							@Html.ValidationSummary(true, "", new { @class = "text-danger" })

							<div class="row">
								<div class="col-md-6 mb-4">
									<div class="form-outline">
										@Html.EditorFor(model => model.maLoaiDV, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
										@Html.ValidationMessageFor(model => model.maLoaiDV, "", new { @class = "text-danger" })
										<label class="form-label fw-bold">Mã Loại Dịch Vụ</label>
									</div>
								</div>
								<div class="col-md-6 mb-4">
									<div class="form-outline">
										@Html.EditorFor(model => model.tenLoai, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
										@Html.ValidationMessageFor(model => model.tenLoai, "", new { @class = "text-danger" })
										<label class="form-label fw-bold">Tên Loại Dịch Vụ</label>
									</div>
								</div>
							</div>

							<div style="width: 100%; display: flex">
								<div class="m-auto">
									<input class="btn btn-primary btn-lg" type="submit" value="Thêm" />
									@Html.ActionLink("Quay Về", "Index", null, new { @class = "btn btn-primary btn-lg" })
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
}