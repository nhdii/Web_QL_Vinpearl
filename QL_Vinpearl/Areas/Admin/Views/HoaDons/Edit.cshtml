@model QL_Vinpearl.Models.HOADON

@{
	ViewBag.Title = "Edit";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm("Edit", "HoaDons", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	@Html.AntiForgeryToken()
	<section class="vh-100 gradient-custom">
		<div class="container py-5 h-100">
			<div class="row justify-content-center align-items-center h-100">
				<div class="col-12 col-lg-9 col-xl-7">
					<div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
						<div class="card-body p-4 p-md-5">
							<h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Sửa thông tin hoá đơn ( Chỉ sửa khi biết bạn đang làm gì! )</h3>
							@Html.ValidationSummary(true, "", new { @class = "text-danger" })
							@Html.HiddenFor(model => model.maHD)
							<div class="row">
								<div class="col-md-6 mb-4">
									<div class="form-outline">
										@Html.DropDownList("maKH", null, htmlAttributes: new { @class = "form-control form-control-lg" })
										@Html.ValidationMessageFor(model => model.maKH, "", new { @class = "text-danger" })
										<label class="form-label fw-bold">Chọn Khách Hàng</label>
									</div>
								</div>
								<div class="col-md-6 mb-4">
									<div class="form-outline">
										@Html.DropDownList("maNV", null, htmlAttributes: new { @class = "form-control form-control-lg" })
										@Html.ValidationMessageFor(model => model.maNV, "", new { @class = "text-danger" })
										<label class="form-label fw-bold">Chọn Nhân Viên</label>
									</div>
								</div>
							</div>

							<div class="row">
								<div class="col-md-6 mb-4">
									<div class="form-outline">
										@Html.EditorFor(model => model.ngayThanhToan, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
										@Html.ValidationMessageFor(model => model.ngayThanhToan, "", new { @class = "text-danger" })
										<label class="form-label fw-bold">Ngày Thanh Toán</label>
									</div>
								</div>
								<div class="col-md-6 mb-4">
									<div class="form-outline">
										@Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
										@Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
										<label class="form-label fw-bold">Số Điện Thoại</label>
									</div>
								</div>
							</div>

							<div class="row">
								<div class="col-md-6 mb-4">
									<div class="form-outline">
										@Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
										@Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
										<label class="form-label fw-bold">Email</label>
									</div>
								</div>
							</div>
							<div style="width: 100%; display: flex">
								<div class="m-auto">
									<input class="btn btn-primary btn-lg" type="submit" value="Sửa" />
									@Html.ActionLink("Quay Về", "Index", null, new { @class = "btn btn-primary btn-lg" })
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
}