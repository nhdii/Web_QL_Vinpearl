@model QL_Vinpearl.Models.HOADON

@{
	ViewBag.Title = "Delete";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
	<h3>Bạn có chắc chắn muốn xoá hoá đơn này không?</h3>
	<p>Mã hoá đơn: @Html.DisplayFor(model => model.maHD)</p>
	<p>Tên khách hàng: @Html.DisplayFor(model => model.KHACHHANG.hoTenKH)</p>
	<p>Ngày thanh toán: @Html.DisplayFor(model => model.ngayThanhToan)</p>
	<p>Số điện thoại: @Html.DisplayFor(model => model.SDT)</p>
	@using (Html.BeginForm("Delete", "HoaDons", FormMethod.Post))
	{
		@Html.AntiForgeryToken()
		<div class="m-auto">
			<input class="btn btn-primary btn-lg" type="submit" value="Xoá" />
			@Html.ActionLink("Quay Về", "Index", null, new { @class = "btn btn-primary btn-lg" })
		</div>
	}
</div>
