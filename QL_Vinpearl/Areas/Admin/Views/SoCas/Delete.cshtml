@model QL_Vinpearl.Models.SOCA

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
	<h3>Bạn có chắc chắn muốn xoá ca làm của nhân viên này không?</h3>
	<p>Mã ca: @Html.DisplayFor(model => model.maCa)</p>
	<p>Tên nhân viên: @Html.DisplayFor(model => model.NHANVIEN.hoTenNV)</p>
	<p>Số ca: @Html.DisplayFor(model => model.soCa1)</p>
	@using (Html.BeginForm("Delete", "HoaDons", FormMethod.Post))
	{
		@Html.AntiForgeryToken()
		@Html.HiddenFor(model => model.maCa)
		@Html.HiddenFor(model => model.maNV)
		<div class="m-auto">
			<input class="btn btn-primary btn-lg" type="submit" value="Xoá" />
			@Html.ActionLink("Quay Về", "Index", null, new { @class = "btn btn-primary btn-lg" })
		</div>
	}
</div>