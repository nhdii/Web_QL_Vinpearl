@model QL_Vinpearl.Models.KHACHHANG

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
	<h3>Bạn có chắc chắn muốn xoá người dùng này không?</h3>
	<p>Họ và tên: @Html.DisplayFor(model => model.hoTenKH)</p>
	<p>Số điện thoại: @Html.DisplayFor(model => model.SDT)</p>
	<p>Email: @Html.DisplayFor(model => model.email)</p>
	@using (Html.BeginForm("Delete", "KhachHangs", FormMethod.Post))
	{
		@Html.AntiForgeryToken()
		<div class="m-auto">
			<input class="btn btn-primary btn-lg" type="submit" value="Xoá" />
			@Html.ActionLink("Quay Về", "Index", null, new { @class = "btn btn-primary btn-lg" })
		</div>
	}
</div>
