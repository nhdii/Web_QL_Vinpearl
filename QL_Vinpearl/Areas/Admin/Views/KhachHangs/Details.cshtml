@model QL_Vinpearl.Models.KHACHHANG

@{
	ViewBag.Title = "Details";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
	string gtinh = "";
}
<div class="container emp-profile">
		<div class="row">
			<div class="col-md-4">
				<div class="profile-img">
					<img src="~/Content/img/Avatar/@Html.DisplayFor(model => model.anh)" alt="" />
				</div>
			</div>
			<div class="col-md-6">
				<div class="profile-head">
					<h5>
						@Html.DisplayFor(model => model.hoTenKH)
					</h5>
					<h6>
						@Html.DisplayFor(model => model.email)
					</h6>
					<ul class="nav nav-tabs" id="myTab" role="tablist">
						<li class="nav-item">
							<span class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Detail</span>
						</li>
					</ul>

					<div class="row">
						<div class="col-md-8">
							<div class="tab-content profile-tab" id="myTabContent">
								<div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
									<div class="row">
										<div class="col-md-6">
											<label>Số Điện Thoại</label>
										</div>
										<div class="col-md-6">
											<p>@Html.DisplayFor(model => model.SDT)</p>
										</div>
									</div>

									<div class="row">
										<div class="col-md-6">
											<label>Địa Chỉ</label>
										</div>
										<div class="col-md-6">
											<p>@Html.DisplayFor(model => model.diaChi)</p>
										</div>
									</div>

									<div class="row">
										<div class="col-md-6">
											<label>Ngày Sinh</label>
										</div>
										<div class="col-md-6">
											<p>@Html.DisplayFor(model => model.ngaySinh)</p>
										</div>
									</div>

									<div class="row">
										<div class="col-md-6">
											<label>Giới Tính</label>
										</div>
										<div class="col-md-6">
											<p>
												@{
													if (Model.gioiTinh == true)
													{
														gtinh = "Nam";
													}
													else
													{
														gtinh = "Nữ";
													}
												}
												@gtinh
											</p>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-2">
				@Html.ActionLink("Sửa Thông Tin", "Edit", new { id = Model.maKH }, new { @class = "profile-edit-btn text-decoration-none" })
				<br />
				<div class="my-2"></div>
				@Html.ActionLink("Quay Về", "Index",null, new { @class = "profile-edit-btn text-decoration-none" })
			</div>
		</div>
</div>