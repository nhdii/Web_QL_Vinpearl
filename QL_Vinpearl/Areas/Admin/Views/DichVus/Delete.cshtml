@model QL_Vinpearl.Models.DICHVU

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
	<h3>Bạn có chắc chắn muốn xoá dịch vụ này không?</h3>
	<p>Tên dịch vụ: @Html.DisplayFor(model => model.tenDV)</p>
	<p>Loại dịch vụ: @Html.DisplayFor(model => model.LOAIDV.tenLoai)</p>
	<p>Xếp loại: @Html.DisplayFor(model => model.xepLoai)</p>
	@using (Html.BeginForm("Delete", "DichVus", FormMethod.Post))
	{
		@Html.AntiForgeryToken()
		<div class="m-auto">
			<input class="btn btn-primary btn-lg" type="submit" value="Xoá" />
