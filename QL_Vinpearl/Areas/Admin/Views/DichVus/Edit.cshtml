@model QL_Vinpearl.Models.DICHVU

@{
	ViewBag.Title = "Edit";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
	<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
	<script type="text/javascript">
		$(function () {
			var fileupload = $("#ServicePicture");
			var image = $("#FileUpload");
			image.click(function () {
				fileupload.click();
			});
			fileupload.change(function () {
				var fileName = $(this).val().split('\\')[$(this).val().split('\\').length - 1];
				document.getElementById("anh").value = fileName;
			});
		});
	</script>
}

@using (Html.BeginForm("Edit", "DichVus", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	@Html.AntiForgeryToken()
	<section class="vh-100 gradient-custom">
		<div class="container py-5 h-100">
			<div class="row justify-content-center align-items-center h-100">
				<div class="col-12 col-lg-9 col-xl-7">
					<div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
						<div class="card-body p-4 p-md-5">
							<h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Sửa thông tin dịch vụ</h3>
							@Html.ValidationSummary(true, "", new { @class = "text-danger" })
							@Html.HiddenFor(model => model.maDV)
							<div class="row">
								<div class="col-md-6 mb-4">
									<div class="form-outline">
										@Html.EditorFor(model => model.tenDV, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
										@Html.ValidationMessageFor(model => model.tenDV, "", new { @class = "text-danger" })
										<label class="form-label fw-bold">Tên Dịch Vụ</label>
									</div>
								</div>
								<div class="col-md-6 mb-4">
									<div class="form-outline">
										@Html.TextAreaFor(model => model.moTa, new { @class = "form-control form-control-lg" })
										@Html.ValidationMessageFor(model => model.moTa, "", new { @class = "text-danger" })
										<label class="form-label fw-bold">Mô Tả</label>
									</div>
								</div>
							</div>

							<div class="row">
								<div class="col-md-6 mb-4 d-flex align-items-center">
									<div class="form-outline datepicker w-100">
										@Html.DropDownList("maLoaiDV", null, htmlAttributes: new { @class = "form-control form-control-lg" })
										@Html.ValidationMessageFor(model => model.maLoaiDV, "", new { @class = "text-danger" })
										<label class="form-label fw-bold">Loại Dịch Vụ</label>
									</div>
								</div>
								<div class="col-md-6 mb-4">
									<div class="form-outline datepicker w-100">
										@Html.EditorFor(model => model.xepLoai, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
										@Html.ValidationMessageFor(model => model.xepLoai, "", new { @class = "text-danger" })
										<label class="form-label fw-bold">Xếp Loại</label>
									</div>
								</div>
							</div>

							<div class="row">
								<div class="col-md-6 mb-4 d-flex align-items-center">
									<div class="form-outline datepicker w-100">
										@Html.EditorFor(model => model.sdtDV, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
										@Html.ValidationMessageFor(model => model.sdtDV, "", new { @class = "text-danger" })
										<label class="form-label fw-bold">Số Điện Thoại</label>
									</div>
								</div>
								<div class="col-md-6 mb-4">
									<div class="form-outline datepicker w-100">
										<div style="display:flex ">
											<input class="form-control form-control-lg" type="file" name="ServicePicture" id="ServicePicture" />
											@Html.EditorFor(model => model.anh)
										</div>
										<label class="form-label fw-bold">Ảnh</label>
									</div>
								</div>
							</div>

							<div class="row">
								<div class="col-md-6 mb-4 d-flex align-items-center">
									<div class="form-outline datepicker w-100">
										@Html.TextAreaFor(model => model.diaChiDV, new { @class = "form-control form-control-lg" })
										@Html.ValidationMessageFor(model => model.diaChiDV, "", new { @class = "text-danger" })
										<label class="form-label fw-bold">Địa Chỉ DV</label>
									</div>
								</div>
							</div>

							<div style="width: 100%; display: flex">
								<div class="m-auto">
									<input class="btn btn-primary btn-lg" type="submit" value="Sửa" />
									@Html.ActionLink("Quay Về", "Index", null, new { @class = "btn btn-primary btn-lg" })
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
}