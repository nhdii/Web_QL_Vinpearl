@{
	try
	{
		string hoTen = Session["HoTen"].ToString();
		if (hoTen != null)
		{
			ViewBag.NguoiDung = "Thông tin người dùng: " + hoTen;
		}
		else
		{
			ViewBag.NguoiDung = "Thông tin người dùng: Chưa đăng nhập ";
		}
	}
	catch
	{

	}
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title</title>
	<link rel="shortcut icon" href="https://statics.vinpearl.com/favicon.png" type="image/png">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet" />
	<link href="~/Content/css/adminPageStyle.css" rel="stylesheet" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
	<style>

		.header {
			background-color: white;
			display: flex;
			align-items: center;
			top: 0;
			left: 0;
			width: 100%;
			position: sticky;
			z-index: 1;
		}

		.logo .imglogo {
			width: 100px;
		}

		nav ul {
			display: flex;
			list-style: none;
			margin: 0;
			padding: 0;
		}

		nav li {
			margin-left: 30px;
			font-size: 20px;
		}

		nav ul li a {
			text-decoration: none;
			color: black;
			font-weight: bold;
		}

		nav .dropdown {
			position: relative;
			padding-right: 20px;
		}

			nav .dropdown .dropbtn {
				background-color: transparent;
				border: none;
				cursor: pointer;
				font-size: 20px;
				font-weight: bold;
			}

		nav .dropdown-content {
			display: none;
			position: absolute;
			background-color: #f9f9f9;
			min-width: 160px;
			box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
			z-index: 1;
		}

		nav .dropdown:hover .dropdown-content {
			display: block;
		}

		nav .dropdown-content a {
			color: black;
			padding: 12px 16px;
			text-decoration: none;
			display: block;
		}

			nav .dropdown-content a:hover {
				background-color: #f1f1f1;
			}

		#registerLink, #loginLink {
			text-decoration: none;
			color: black;
		}

		#cart-item {
			width: 100px;
			height: 50px;
			background-color: #388FEF;
			border-radius: 10px;
			display: flex;
			justify-content: center;
			align-items: center;
			margin-right: 30px;
		}
	</style>

</head>
<body style="margin:0px;">
	<div class="header" style="justify-content: space-between;">
		<nav>
			<ul>
				<li>@Html.ActionLink("Trang Chủ", "../DICHVU/Index", "DICHVU", "", htmlAttributes: new { @class = "a" })</li>
				<li>@Html.ActionLink("Tìm Kiếm", "../DICHVU/TimKiem", "DICHVU", htmlAttributes: new { @class = "a" })</li>
				<li class="dropdown">
					<span class="dropbtn">Loại Dịch Vụ</span>
					<div class="dropdown-content border-2">
						<a class="border-2" href="@Url.Action("DanhSachTheoLoaiDV", "LOAIDV", new { loaiDV = "Nghỉ dưỡng" })">Nghỉ dưỡng</a>
						<a href="@Url.Action("DanhSachTheoLoaiDV", "LOAIDV", new { loaiDV = "Khám phá & Hoạt động" })">Khám phá & Hoạt động</a>
						<a href="@Url.Action("DanhSachTheoLoaiDV", "LOAIDV", new { loaiDV = "Ẩm thực" })">Ẩm thực</a>
						<a href="@Url.Action("DanhSachTheoLoaiDV", "LOAIDV", new { loaiDV = "Golf" })">Golf</a>
					</div>
				</li>
			</ul>
		</nav>
		<div class="logo" style="margin-right: 8%">
			<a href="@Url.Action("Index","DICHVU")"><img src="~/Content/img/logo_vinpearl.jpg" alt="logo Vinpearl" class="imglogo"></a>
		</div>
		<div id="headright" style="display: flex;">
			<div class="login">@Html.Partial("_LoginPartial")</div>
			<a href="@Url.Action("Index","Cart")" id="cart-item"><i class="bi bi-cart4" style="font-size: 30px; color: white"></i></a>
		</div>
	</div>
	<div id="content">
		@RenderBody()
	</div>
</body>
</html>